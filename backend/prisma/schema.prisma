generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model User{ 
  id             Int          @id @default(autoincrement())
  name           String        @unique
  email          String        @unique
  profile_pic    String?  
  notes          notes[]  
  events         events[]  
  tasks          tasks[]  
}


model events{
  id Int @id @default(autoincrement())
  title String @unique
  description String?
  start_date String 
  end_date String
  user User @relation(fields: [userID],references: [id], onDelete:Cascade)
  userID Int
}

model tasks{

  id Int @id @default(autoincrement())
  title String  @unique
  priority String
  start_date String
  end_date String
  status Boolean @default(false)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int
}

  




model notes{
  id Int @id @default(autoincrement())
  title  String  @unique
  content String @db.LongText
  created_at DateTime @default(now())
  user User? @relation(fields: [userId], references: [id],onDelete:Cascade)
  userId Int
}










 
  

